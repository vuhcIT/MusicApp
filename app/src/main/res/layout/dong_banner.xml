<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageviewbackgroundbanner"
        android:scaleType="fitXY"
        android:layout_width="match_parent"
        android:layout_height="200dp"/>
    <View
        android:background="@drawable/custom_banner"
        android:layout_width="wrap_content"
        android:layout_height="200dp">
    </View>


    <RelativeLayout
        android:id="@+id/relativelayout"
        android:layout_alignBottom="@id/imageviewbackgroundbanner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/imageviewbbanner"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:padding="2dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"/>
        <TextView
            android:textStyle="bold"
            android:textColor="@color/white"
            android:textSize="17sp"
            android:text="Lo Yeu Mat roi"
            android:id="@+id/textviewtitlebannerbaihat"
            android:layout_alignTop="@id/imageviewbbanner"
            android:layout_toRightOf="@id/imageviewbbanner"
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        </TextView>
        <RelativeLayout
            android:layout_below="@id/textviewtitlebannerbaihat"
            android:layout_toRightOf="@id/imageviewbbanner"
            android:layout_marginTop="7dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/textviewnoidung"
                android:layout_marginRight="40dp"
                android:maxLines="2"
                android:textColor="@color/white"
                android:text="Chao ban den voi ca khuc moi cua ca si hien tai"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            </TextView>

        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>